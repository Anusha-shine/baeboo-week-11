<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Orders - Baeboo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

  <style>
    body {
      background: linear-gradient(to right, #e0f7f4, #f9f9f9);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }

    .header {
      padding: 20px 0;
      background-color: #fff;
      border-bottom: 1px solid #e4e4e4;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.03);
    }

    .header h2 {
      color: black;
      font-weight: bold;
      margin: 0;
    }

    .header__menu ul {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      gap: 20px;
      justify-content: center;
      align-items: center;
    }

    .header__menu a {
      text-decoration: none;
      color: #333;
      font-weight: 500;
      transition: 0.3s;
    }

    .header__menu a:hover,
    .header__menu .active a {
      color: #046963;
    }

    .orders-wrapper {
      max-width: 960px;
      margin: 60px auto;
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
      padding: 40px 35px;
    }

    h3 {
      font-weight: 700;
      color: #046963;
      margin-bottom: 30px;
      text-align: center;
    }

    .no-orders {
      background-color: #fff3cd;
      border: 1px solid #ffeeba;
      padding: 20px;
      border-radius: 6px;
      color: #856404;
      font-weight: 500;
      text-align: center;
    }

    .form-control {
      border-radius: 30px;
      padding: 10px 20px;
      box-shadow: none;
      border: 1px solid #ced4da;
      transition: border-color 0.3s;
    }

    .form-control:focus {
      border-color: #046963;
      box-shadow: 0 0 0 0.2rem rgba(4, 105, 99, 0.1);
    }

    .table th {
      background-color: #f0fdfc;
      color: #046963;
    }

    .table td, .table th {
      vertical-align: middle;
      text-align: center;
    }

    .badge {
      padding: 6px 12px;
      font-size: 0.85rem;
      border-radius: 50px;
      text-transform: capitalize;
    }

    .btn-outline-primary {
      border-color: #046963;
      color: #046963;
      border-radius: 20px;
    }

    .btn-outline-primary:hover {
      background-color: #046963;
      color: #fff;
    }

    .pagination .page-link {
      border-radius: 50px;
      margin: 0 5px;
      color: #046963;
      border-color: #046963;
    }

    .pagination .active .page-link {
      background-color: #046963;
      border-color: #046963;
      color: #fff;
    }

    @media (max-width: 768px) {
      .orders-wrapper {
        padding: 25px 20px;
      }

      .header__menu ul {
        flex-direction: column;
        gap: 10px;
      }
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header class="header">
    <div class="container d-flex justify-content-between align-items-center">
      <h2>baeboo</h2>
      <nav class="header__menu">
        <ul>
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/shop">Shop</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- Orders Section -->
  <div class="container">
    <div class="orders-wrapper">
      <h3>My Orders</h3>

      <!-- Search Bar -->
      <form method="GET" action="/orders" role="search" class="mb-4">
        <input
          type="text"
          name="search"
          placeholder="Search orders by ID, status or name"
          value="<%= typeof search !== 'undefined' ? search : '' %>"
          class="form-control"
        />
      </form>

      <% if (orders.length === 0) { %>
        <div class="no-orders">You have no orders yet.</div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Placed On</th>
                <th>Status</th>
                <th>Total Price (₹)</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order => { %>
                <tr>
                  <td><%= order.orderId %></td>
                  <td><%= order.createdAt.toLocaleDateString() %></td>
                  <td>
                    <span class="badge bg-<%= 
                      order.status === 'pending' ? 'warning' :
                      order.status === 'placed' ? 'info' :
                      order.status === 'shipped' ? 'primary' :
                      order.status === 'delivered' ? 'success' :
                      order.status === 'cancelled' ? 'danger' : 'secondary'
                    %>">
                      <%= order.status %>
                    </span>
                  </td>
                  <td>₹<%= (order.finalAmount ?? 0).toFixed(2) %></td>
                  <td>
                    <a href="/order/<%= order.orderId %>" class="btn btn-sm btn-outline-primary">View</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <nav class="mt-4">
          <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">&laquo;</a>
              </li>
            <% } else { %>
              <li class="page-item disabled"><span class="page-link">&laquo;</span></li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>"><%= i %></a>
              </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">&raquo;</a>
              </li>
            <% } else { %>
              <li class="page-item disabled"><span class="page-link">&raquo;</span></li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    </div>
  </div>
</body>
</html>
